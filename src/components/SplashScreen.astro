---
// SplashScreen - Classic Mac "hello" intro splash
---

<div class="splash" id="splash" role="presentation" aria-label="Welcome splash screen">
  <button class="splash-skip" type="button" aria-label="Skip intro">Skip</button>

  <!-- Classic Mac with "hello." SVG illustration -->
  <svg class="splash-mac" viewBox="0 0 280 220" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
    <!-- Mac body -->
    <rect x="40" y="10" width="200" height="160" rx="8" fill="#E8E4DC" stroke="#A0A0A0" stroke-width="2"/>

    <!-- Screen bezel -->
    <rect x="55" y="25" width="170" height="115" rx="4" fill="#2A2A2A" stroke="#808080" stroke-width="1"/>

    <!-- Screen -->
    <rect x="62" y="32" width="156" height="100" rx="2" fill="#F8F8F0"/>

    <!-- "hello." text in script style -->
    <text x="140" y="95" text-anchor="middle" fill="#222222" font-family="Georgia, 'Times New Roman', serif" font-size="42" font-style="italic">
      hello.
    </text>

    <!-- Floppy drive slot -->
    <rect x="165" y="148" width="60" height="8" rx="2" fill="#C0C0C0" stroke="#808080" stroke-width="1"/>

    <!-- Apple-style rainbow logo hint (subtle) -->
    <g transform="translate(60, 150)">
      <rect x="0" y="0" width="4" height="8" fill="#5DC05D"/>
      <rect x="4" y="0" width="4" height="8" fill="#F0C040"/>
      <rect x="8" y="0" width="4" height="8" fill="#E87040"/>
      <rect x="12" y="0" width="4" height="8" fill="#D85050"/>
      <rect x="16" y="0" width="4" height="8" fill="#9060C0"/>
      <rect x="20" y="0" width="4" height="8" fill="#5090D0"/>
    </g>

    <!-- Base/stand -->
    <path d="M80 170 L200 170 L210 190 L70 190 Z" fill="#D8D4CC" stroke="#A0A0A0" stroke-width="1"/>

    <!-- Keyboard -->
    <rect x="45" y="195" width="190" height="20" rx="3" fill="#E0DCD4" stroke="#A0A0A0" stroke-width="1"/>
    <!-- Keyboard keys hint -->
    <g fill="#C8C4BC">
      <rect x="52" y="199" width="30" height="5" rx="1"/>
      <rect x="85" y="199" width="30" height="5" rx="1"/>
      <rect x="118" y="199" width="45" height="5" rx="1"/>
      <rect x="166" y="199" width="30" height="5" rx="1"/>
      <rect x="199" y="199" width="30" height="5" rx="1"/>
      <rect x="52" y="206" width="20" height="5" rx="1"/>
      <rect x="75" y="206" width="20" height="5" rx="1"/>
      <rect x="98" y="206" width="65" height="5" rx="1"/>
      <rect x="166" y="206" width="20" height="5" rx="1"/>
      <rect x="189" y="206" width="20" height="5" rx="1"/>
    </g>
  </svg>

  <p class="splash-hint">Click anywhere or press any key to continue</p>
</div>

<script>
  import '../scripts/splash.js';
</script>

<style>
  @import '../styles/splash.css';
</style>
