---
interface Props {
  id: string;
  label: string;
  x?: number;
  y?: number;
}

const { id, label, x = 24, y = 24 } = Astro.props;
---

<button
  class="desktop-icon"
  data-window={id}
  aria-haspopup="dialog"
  aria-label={`Open ${label}`}
  type="button"
  style={`--icon-x: ${x}px; --icon-y: ${y}px;`}
>
  <div class="icon-image">
    <slot />
  </div>
  <span class="icon-label">{label}</span>
</button>
